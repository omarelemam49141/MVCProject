@model IEnumerable<StudentMessage>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="5" class="text-center"><p class="lead">No Messages available</p></td>

    </tr>
}
else
{
    @foreach (StudentMessage studentMessage in Model)
    {
        <tr class="@(studentMessage.Read ? "" : "bg-light")"> 

            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">@studentMessage.Date </span>
            </td>
            <td class="align-middle text-center">
                <p class="text-xs font-weight-bold mb-0">@studentMessage.Content </p>
            </td>

        </tr>

    }
}