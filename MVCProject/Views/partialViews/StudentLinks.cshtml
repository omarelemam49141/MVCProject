@if (User.IsInRole("student"))
{
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Title == "ShowPermissions" ? "active" : "")" asp-action="showPermissions" asp-controller="Student" asp-route-id="@ViewBag.StudentId">
            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                <i class="fas fa-user-shield text-dark"></i>
                </div>

            <span class="nav-link-text ms-1">
                Permissions
            </span>

        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @(ViewBag.Title == "ShowSchedule"? "active" :"")" asp-action="ShowSchedule" asp-controller="Student" asp-route-id="@ViewBag.StudentId">
            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                
                <i class="fas fa-table text-dark"></i>
            </div>
            <span class="nav-link-text ms-1">Schedule</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @(ViewBag.Title == "ShowAttendanceRecords" ? "active":"")" asp-action="ShowAttendanceRecords" asp-controller="Student" asp-route-id="@ViewBag.StudentId" asp-route-startDate="@DateOnly.FromDateTime(DateTime.Now.AddDays(-1))" asp-route-numberOfDays="7">
            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                <i class="fas fa-calendar-alt text-dark"></i>
            </div>
            <span class="nav-link-text ms-1">Attendance</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Title == "ShowProfile" ? "active" : "")" asp-action="ShowProfile" asp-controller="Student" asp-route-id="@ViewBag.StudentId">
            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                <svg width="12px" height="12px" viewBox="0 0 46 42" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <title>customer-support</title>
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <g transform="translate(-1717.000000, -291.000000)" fill="#FFFFFF" fill-rule="nonzero">
