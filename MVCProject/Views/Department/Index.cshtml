@model IEnumerable<Department>
@{
    Layout = "~/Views/Shared/AdminDashBoard.cshtml";
    ViewBag.title = "Departments";
}
<div>
    <table class="table table-striped col-8">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Department", new { id = item.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Department", new { id = item.Id })" class="btn btn-danger Deletebtn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div>
    <a class="btn btn-info" asp-action="Add" asp-controller="Department">Add Department</a>
</div>

@section AdminScript {
    <script>
        $(".Deletebtn").click((e) => {
            e.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "Delete this department",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "I am Sure"
            }).then((res) => {
                if (res.isConfirmed) {
                    window.location = e.target.href;
                }
            });
        });
    </script>
}

