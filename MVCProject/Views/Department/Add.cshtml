@{
    Layout = "~/Views/Shared/AdminDashBoard.cshtml";
    ViewBag.title = "Departments";

}
@model Department
<form asp-action="@((Model == null) ? "Add" : "Edit")" asp-controller="Department" method="post">
    <input asp-for="Id" hidden/>
    <div class="form-group">
        <label asp-for="Name" class="form-label">Department Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@((Model == null) ? "Add" : "Save Changes")</button>
</form>

