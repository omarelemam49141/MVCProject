@model MVCProject.Models.Student

@{
    ViewData["Title"] = "Manage Student";
    var tracks = ViewBag.Tracks as List<Track>;
    var intakes = ViewBag.Intakes as List<Intake>;

    SelectList trackList = new SelectList(tracks, "Id", "Name");
    SelectList intakeList = new SelectList(intakes, "Id", "Name");
}

<h1>Manage</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Manage" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <select name="trackId" class="form-control" asp-items="@trackList">
                <option value="">Select Track</option>
            </select>

            <select name="intakeId" class="form-control" asp-items="@intakeList">
				<option value="">Select Intake</option>
            </select>

            
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
