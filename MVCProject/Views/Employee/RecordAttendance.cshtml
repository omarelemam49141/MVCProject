
@model IEnumerable<Student>
@{
    	ViewBag.Title = "Record Attendance";
        Layout = "~/Views/Shared/EmployeeDashBoard.cshtml";

        @*recieve the date from viewBag*@
		var students = ViewBag.Students as List<Student>;
		var tracks = ViewBag.Tracks as List<Track>;

		SelectList trackList = new SelectList(tracks, "Id", "Name");
}

<h2 class="text-center">Record Attendance</h2>

@*select list to select track --> whose value will define the students will be shown *@
		<select name="trackId" asp-items="@trackList" class="form-control w-50 mx-auto">
			<option value="">Select Track</option>
		</select>


<form class="col-md-8 m-auto text-center p-3 my-3" asp-action="RecordAttendance">
	
    @*display all students abd select state (present/ absent)*@
    <table class="table table-bordered">
        <thead>
			<tr>
				<th>Student Name</th>
				<th>Status</th>
			</tr>
        </thead>
        <tbody>
            @*for loop to display all students*@
            @for (int i = 0; i < students.Count; i++)
			{
				<tr>
					<td>@students[i].Name</td>
					<td>
						<select name="status" class="form-control">
							<option value="present">Present</option>
							<option value="absent">Absent</option>
							<option value="late">Late</option>
						</select>
					</td>
				</tr>
			}

            @*save to the database*@
            <tr>
				<td colspan="2">
					<input type="submit" value="Save" class="btn btn-primary" />
				</td>
        </tbody>
    </table>

    
</form>
