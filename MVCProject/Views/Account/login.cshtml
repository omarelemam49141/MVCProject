@model LoggedInUser

@{
    Layout = "_AccountLayout";
    ViewBag.Title = "Login";
}

<form role="form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled"></div>

    <label asp-for="Email"></label>
    <div class="mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <label asp-for="Password"></label>
    <div class="mb-3">
        <input asp-for="Password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Sign in</button>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js" ></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}